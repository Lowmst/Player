<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PlayerUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlayerUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PlayerUI3">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="FileNameText"/>
        <Button x:Name="FileSelectorButton" Click="FileSelectorButton_OnClick">Select File</Button>
        <Button x:Name="PlayButton" Click="PlayButton_OnClick" >Play</Button>
        <Button x:Name="PauseButton" Click="PauseButton_OnClick">Pause</Button>
        <Button x:Name="StopButton" Click="StopButton_OnClick">Stop</Button>
    </StackPanel>
</Window>
